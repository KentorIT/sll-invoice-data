<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:tns="urn:riv:sll:invoicedata:1"
	targetNamespace="urn:riv:sll:invoicedata:1" elementFormDefault="qualified"
	attributeFormDefault="unqualified" version="1.0">
	<xs:annotation>
		<xs:documentation>Beskrivning:
		</xs:documentation>
	</xs:annotation>

	<xs:complexType name="Item">
		<xs:sequence>
			<xs:element name="itemId" type="xs:string"/>
			<xs:element name="description" type="xs:string"/>
			<xs:element name="qty">
				<xs:simpleType>
					<xs:restriction base="xs:decimal">
						<xs:maxExclusive value="99999"/>
						<xs:fractionDigits value="2"/>
						<xs:minInclusive value="0"/>
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="ItemList">
		<xs:sequence>
			<xs:element name="item" type="tns:Item" minOccurs="1" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="Event">
		<xs:sequence>
			<xs:element name="eventId" type="xs:string">
				<xs:annotation>
					<xs:documentation>Event id is defined by the user, and expected to be globally unique.</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="supplierId" type="xs:string">
				<xs:annotation>
					<xs:documentation>Supplier (of interpreters) identity.</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="supplierName" type="xs:string"/>
			<xs:element name="serviceCode" type="xs:string"/>
			<xs:element name="signedBy" type="xs:string"/>
			<xs:element name="signedTimestamp" type="xs:dateTime"/>
			<xs:element name="startTimestamp" type="xs:dateTime"/>
			<xs:element name="endTimestamp" type="xs:dateTime"/>
			<xs:element name="items" type="tns:ItemList"/>
			<xs:any namespace="##other" processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	
	<xs:complexType name="InvoiceEvents">
		<xs:sequence>
			<xs:element name="supplierId" type="xs:string"/>
			<xs:element name="eventIdList" type="xs:string" minOccurs="1" maxOccurs="unbounded">
				<xs:annotation>
					<xs:documentation>Globally unique and registered event id list</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:any namespace="##other" processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>		
	</xs:complexType>

	<xs:complexType name="GetInvoiceRequest">
		<xs:sequence>
			<xs:element name="supplierId" type="xs:string" minOccurs="0" maxOccurs="1" />
			<xs:element name="eventId" type="xs:string" minOccurs="0" maxOccurs="1">
				<xs:annotation>
					<xs:documentation>This field can be left empty in-case if the request is to get all unprocessed invoices</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:any namespace="##other" processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>		
	</xs:complexType>	
	
	<xs:simpleType name="ResultCodeEnum">
		<xs:restriction base="xs:string">
			<xs:enumeration value="OK"/>
			<xs:enumeration value="ERROR"/>
		</xs:restriction>
	</xs:simpleType>

	<xs:complexType name="ResultCode">
		<xs:sequence>
			<xs:element name="code" type="tns:ResultCodeEnum" minOccurs="1"/>
			<xs:element name="message" type="xs:string" minOccurs="0"/>
		</xs:sequence>
	</xs:complexType>

</xs:schema>
